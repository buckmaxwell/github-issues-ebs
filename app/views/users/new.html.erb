
<div class="container">
	<% if current_user %>
		<p>Welcome, <%= current_user.name %></p>
	<% else %>
		
		<div class="row vertical-align">
			<div class="col-lg-12 text-center">
				<h1>Sign In With GitHub</h1>
				<%= link_to "Let's Go!", "/auth/github",{class:"btn btn-primary btn-lg"} %>
			</div>
		</div>
	<% end %>
</div>